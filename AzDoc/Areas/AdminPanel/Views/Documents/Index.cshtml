@using AzDoc.Helpers;
@using Widgets
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LeftMenuLayout.cshtml";
    RouteData routeData = ViewContext.RouteData;

    var routeValueDictionary = new RouteValueDictionary(routeData.Values);

    var lang = routeValueDictionary["lang"] ?? "az";

    <style>
        button,
        [type="button"],
        [type="reset"],
        [type="submit"] {
            -webkit-appearance: none !important;
        }

        .container {
            margin-left: 0px;
        }
    </style>


    var grid = Html.MhmGrid("gridResolution", "DeleteResolution", "Documents", routeValues: new { area = "AdminPanel" })

.Columns(cols =>
{


    cols.Column(c =>
    {
        c.SetText("Sənədin nömrəsi");
        c.SetDataField("DocEnterNo");
        c.SetHeaderAlign(TextAlign.Center);
        c.SetCellsAlign(TextAlign.Left);
        c.SetMinWidth(250);
        c.SetMaxWidth(300);
        c.IsPinned();
    });

    cols.Column(c =>
    {
        c.SetText("Dərkənarı yaradan");
        c.SetDataField("DirectionName");
        c.SetHeaderAlign(TextAlign.Center);
        c.SetCellsAlign(TextAlign.Left);
        c.SetMinWidth(250);
        c.SetMaxWidth(300);
        c.IsPinned();

    });

    cols.Column(c =>
    {
        c.SetText("Icraçı");
        c.SetDataField("ExecutorName");
        c.SetHeaderAlign(TextAlign.Center);
        c.SetCellsAlign(TextAlign.Left);
        c.SetMinWidth(250);
        c.SetMaxWidth(300);
        c.IsPinned();
    });

    cols.Column(c =>
    {
        c.SetText("Icra növü");
        c.SetDataField("SendStatus");
        c.SetHeaderAlign(TextAlign.Center);
        c.SetCellsAlign(TextAlign.Left);
        c.SetMinWidth(250);
        c.SetMaxWidth(300);
        c.IsPinned();
    });

    cols.Column(c =>
    {
        c.SetText("");
        c.SetDataField("Id");
        c.SetHeaderAlign(TextAlign.Center);
        c.SetWidth(35);
        c.IsCrud("x", "x");
        c.SetRenderer("<button></button>",
        htmlAttributes: new { @class = "fa fa-trash btn", type = "button", id = "btnDelete", title = "Sil", data_toggle = "modal", data_target = "#deleteDialogModal" });
    });
})
.AllowCrud()
.AllowSorting(false)
.AllowTooltips(false)
.AllowPaging(true)
.AllowFiltering(false)
.AllowFilterRow(false)
.AllowColumnOrdering(true)
.AllowColumnResizing(true)
.SetOnFilter("")
.SetPageSize(35)
.SetWidth("100%")
.SetHeight("100%");

}



