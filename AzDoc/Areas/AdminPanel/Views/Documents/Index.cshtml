<script>



    $('#btnSearch').click(function () {
        $('#DocGrid').css('display', 'block');
        ResfreshGrid();
    })

    function ResfreshGrid() {
        $('#gridResolution').setRouteValue({ 'docEnterNo': $('#txtDocEnterNo').val() });
        $('#gridResolution').bindgrid(1);
    }

    function RefreshPage() {
        location.reload();
    }

    $(document).on('click', '#btnDelete', function (e) {
        $('#deleteDialogModal').modal('show');
        $("#saveBtn").attr('value', $(this).parent().attr("title"));
    })

    $("#cancelBtn").click(function () {
        $("#deleteDialogModal").modal("hide");
    });

    $("#saveBtn").click(function () {
        const splitString = $("#saveBtn").val().split(";");
        var directionid = splitString[0];
        var executorworkplaceid = splitString[1];
        var docid = splitString[2];
        var sendstatus = splitString[3];
        var operationtype = 0;
        if (executorworkplaceid != '0') operationtype = 1;
         $.ajax({
          type: 'POST',
         url: '@Url.Action("DeleteResolutionInfo", "Documents", new { area = "AdminPanel" })',
                        dataType: 'json',
             data: {
                 docid: docid,
                 executorworkplaceid: executorworkplaceid,
                 directionid: directionid,
                 operationtype: operationtype,
                 sendstatus: sendstatus
            },
                        beforeSend: function () {
                            window.ShowLoading();
                        },
                        success: function () {
                            alert("Əməliyyat uğurla tamamlandı.");

                        },
                        complete: function () {
                            window.CloseLoading();
                            $('#deleteDialogModal').modal('hide');
                            ResfreshGrid();
                        }
                    });
    });

    $("#hrdelete").click(function () {
        $(this).addClass("active");
        $("#hradd").removeClass("active");
        $("#hredit").removeClass("active");
        $("#execdeladd").removeClass("active");
        $('#step1').css('display', 'block');
        $('#step2').css('display', 'none');
        $('#step3').css('display', 'none');
        $('#step4').css('display', 'none');
        $('#DocGrid').css('display', 'none');
    });

    $("#hradd").click(function () {
        $(this).addClass("active");
        $("#hrdelete").removeClass("active");
        $("#hredit").removeClass("active");
        $("#execdeladd").removeClass("active");
        $('#step1').css('display', 'none');
        $('#step2').css('display', 'block');
        $('#step3').css('display', 'none');
        $('#step4').css('display', 'none');
        $('#DocGrid').css('display', 'none');
    });


    $("#hredit").click(function () {
        $(this).addClass("active");
        $("#hrdelete").removeClass("active");
        $("#hradd").removeClass("active");
        $("#execdeladd").removeClass("active");
        $('#step1').css('display', 'none');
        $('#step2').css('display', 'none');
        $('#step3').css('display', 'block');
        $('#step4').css('display', 'none');
        $('#DocGrid').css('display', 'none');
    });
    $("#execdeladd").click(function () {
        $(this).addClass("active");
        $("#hrdelete").removeClass("active");
        $("#hredit").removeClass("active");
        $("#hradd").removeClass("active");
        $('#step1').css('display', 'none');
        $('#step2').css('display', 'none');
        $('#step3').css('display', 'none');
        $('#step4').css('display', 'block');
        $('#DocGrid').css('display', 'none');
    });
</script>
