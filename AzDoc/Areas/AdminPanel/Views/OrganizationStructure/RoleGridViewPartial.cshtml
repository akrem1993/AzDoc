@using AzDoc.Helpers
@using BLL.Common.Enums
@using Widgets

@{
    Layout = null;

    <style>
        button,
        [type="button"],
        [type="reset"],
        [type="submit"] {
            -webkit-appearance: none !important;
        }
    </style>


    var grid = Html.MhmGrid("gridRolesStructure", "GetRoles", "OrganizationStructure", routeValues: new { area = "AdminPanel" })
               .Columns(cols =>
               {
                   cols.Column(c =>
                   {
                       c.SetText("");
                       c.SetDataField("RoleId1", FieldType.Number);
                       c.SetHeaderAlign(TextAlign.Center).IsFilterable();
                       c.SetWidth(35);
                       c.IsCrud("x", "x");
                       c.SetRenderer("<a><i class='fas fa-edit'></i></a>",
                       htmlAttributes: new
                       {
                           @class = "operation-button",
                           fn_onclick = "RoleEdit",
                           title = "Rolun redaktəsi"
                       });
                   });

                   cols.Column(c =>
                   {
                       c.SetText("");
                       c.SetDataField("RoleId", FieldType.Number);
                       c.SetHeaderAlign(TextAlign.Center).IsFilterable();
                       c.SetWidth(35);
                       c.IsCrud("x", "x");
                       c.SetRenderer("<a><i class='fas fa-trash'></i></a>",
                       htmlAttributes: new
                       {
                           @class = "operation-button",
                           fn_onclick = "RoleRemove",
                           title = "Rolun silinməsi"
                       });
                   });


                   cols.Column(c =>
                   {
                       c.SetText("Rol adı ");
                       c.SetDataField("RoleName");
                       c.SetHeaderAlign(TextAlign.Center);
                       c.SetCellsAlign(TextAlign.Left);

                       c.IsFilterable();
                   });

               })
               .AllowCrud()
               .AllowSorting(false)
               .AllowTooltips(false)
               .AllowPaging(true)
               .AllowFiltering(true)
               .AllowFilterRow(true)
               .AllowColumnOrdering(true)
               .AllowColumnResizing(true)
               .SetOnFilter("onFilter")
               .SetPageSize(35)
               .SetWidth("100%")
               .SetHeight("100%");


}
@grid.GetHtml()
