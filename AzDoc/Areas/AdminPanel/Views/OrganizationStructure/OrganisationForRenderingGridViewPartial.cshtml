@using AzDoc.Helpers
@using BLL.Common.Enums
@using Widgets

@{
    Layout = null;

    <style>
        button,
        [type="button"],
        [type="reset"],
        [type="submit"] {
            -webkit-appearance: none !important;
        }
    </style>

    var grid = Html.MhmGrid("gridOrganisationsForRendering", "GetOrganisationsForRendering", "OrganizationStructure", routeValues: new
    {
        area = "AdminPanel"
    })
               .Columns(cols =>
               {
                   cols.Column(c =>
                   {
                       c.SetText("");
                       c.SetDataField("Id1", FieldType.Number);
                       c.SetHeaderAlign(TextAlign.Center);
                       c.SetWidth(35);
                       c.IsCrud("x", "x");
                       c.SetRenderer("<a><i class='fas fa-edit'></i></a>",
                       htmlAttributes: new
                       {
                           @class = "operation-button",
                           fn_onclick = "EditOrganisationsForRendering",
                           title = "Əlaqəli qurumun redaktəsi"
                       });
                   });
                   cols.Column(c =>
                   {
                       c.SetText("");
                       c.SetDataField("Id", FieldType.Number);
                       c.SetHeaderAlign(TextAlign.Center);
                       c.SetWidth(35);
                       c.IsCrud("x", "x");
                       c.SetRenderer("<a><i class='fas fa-trash'></i></a>",
                       htmlAttributes: new
                       {
                           @class = "operation-button",
                           data_html = "true",
                           fn_onclick = "RemoveOrganisationsForRendering",
                           title = "Sənədə bağlı qurumun silinməsi"
                       });
                   });

                   cols.Column(c =>
                   {
                       c.SetText("<b>Ad</b>");
                       c.SetDataField("OrganisationShortname");
                       c.SetHeaderAlign(TextAlign.Center);
                       c.SetCellsAlign(TextAlign.Left);
                       c.IsFilterable();
                   });
                   cols.Column(c =>
                   {
                       c.SetText("<b>Index</b>");
                       c.SetDataField("OrderIndex");
                       c.SetHeaderAlign(TextAlign.Center);
                       c.SetCellsAlign(TextAlign.Center);
                       c.IsFilterable();
                       c.SetWidth(250);
                   });
               })
               .AllowCrud()
               .AllowSorting(false)
               .AllowTooltips(false)
               .AllowPaging(true)
               .AllowFiltering(true)
               .AllowFilterRow(true)
               .AllowColumnOrdering(true)
               .AllowColumnResizing(true)
               .SetOnFilter("onFilter")
               .SetPageSize(35)
               .SetWidth("70%")
               .SetHeight("100%");
}
@grid.GetHtml()