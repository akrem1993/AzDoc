@using AzDoc.App_LocalResources
@using AzDoc.Helpers



<div class="row no-gutters mt-4">
    <div class="">
        @if (ViewBag.Sended)
        {
            <div class="newDocBtn">
                <button id="newDoc" class="mBtn mBtn-pr" style="width: 100%"> <i class="fas fa-plus"> @RLang.NewDoc</i></button>
            </div>
        }
    </div>
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="\">Ana səhifə</a></li>
                <li class="breadcrumb-item"><a href="#">Beynəlxalq münasibətlər</a></li>
                @if (ViewBag.Sended)
                {
                    <li class="breadcrumb-item active" aria-current="page">
                        Göndərilənlər
                    </li>
                }
                else
                {
                    <li class="breadcrumb-item active" aria-current="page">
                        Daxil olan
                    </li>
                }

            </ol>
        </nav>
    </div>


    <div class="col-2 text-right">
        <select id="Period" class="selectpicker" data-width="100%">
            @foreach (var item in SessionHelper.Period)
            {
                <option value="@item.PeriodId">@item.PeriodDescription</option>
            }
        </select>
    </div>

</div>

<script>

    $(document).ready(function () {

        $('[data-toggle="popover"]').popover({
            html: true,
            content: function () {
                return $('#popover-content').html();
            }
        });

        $('.popover-dismiss').popover({
            trigger: 'focus'
        });

        $("#newDoc").click(function () {
            window.ShowLoading();
            window.location = '/az/Smdo/Document/AddNewDocument';
        });

    });
</script>