@using BLL.Common.Enums
@using AzDoc.Helpers;
@using BLL.Models.Report;
@using Journal.Model.EntityModel;
@model JournalLib.Model.EntityModel.DocumentInfoModel


@if (@Model != null)
{
    <style>
        .mTable2 tbody tr td {
            max-width: 260px;
        }

            .mTable2 tbody tr td a {
                white-space: nowrap;
            }
    </style>
}
@{

    @*Layout = "~/Views/Shared/_LeftMenuLayout.cshtml";*@
    RouteData routeData = ViewContext.RouteData;

    var routeValueDictionary = new RouteValueDictionary(routeData.Values);

    var lang = routeValueDictionary["lang"] ?? "az";



}

<link href="~/Content/TreeView/TreeView.css" rel="stylesheet" />


    <div id="tblDivArchive">




        <div class="row">
            @if (@Model.Data.ElementAt(0).Note != null && @Model.Data.ElementAt(0).Note != "")
            {
                <div class="col-6 mt-3" style="max-height: 70vh; overflow-y: auto">
                    <table>
                        <tr>
                            <td>
                                <h4 class="modal-title" id="myModalLabel">Qeydlərin tarixcəsi</h4>
                            </td>

                        </tr>
                        <tr>
                            <td>
                                <div class="row">

                                    <div class="col-12 mt-3" style="max-height: 70vh; overflow-y: auto">
                                        <table class="table table-striped table-sm mTable mTable2" id="tbArchive">

                                            <tbody class="text-left">

                                                @foreach (var item in Model.Data)
                                                {
                                                    <tr>
                                                        <td><b>@item.UserName</b>&nbsp; @item.Note<br /><b>@item.CreateDate</b></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </td>
                        </tr>
                    </table>

                </div>
            }

                @if (@Model.Data.ElementAt(0).Icra_haqqda_qeyd != null && @Model.Data.ElementAt(0).Icra_haqqda_qeyd != "")
                {
                    <div class="col-6 mt-3" style="max-height: 70vh; overflow-y: auto">
                        <table>
                            <tr>
                                <td>
                                    <h4 class="modal-title" id="myModalLabel1">Ləğv olunma səbəbi</h4>
                                </td>

                            </tr>
                            <tr>
                                <td>
                                    <div class="row">

                                        <div class="col-12 mt-3" style="max-height: 70vh; overflow-y: auto">
                                            <table class="table table-striped table-sm mTable mTable2" id="tbArchive">

                                                <tbody class="text-left">

                                                    <tr>
                                                        <td><b>@Model.Data.ElementAt(0).Icra_haqqda_qeyd</b></td>
                                                    </tr>

                                                </tbody>
                                            </table>

                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>

                    </div>
                }
            </div>



    </div>











