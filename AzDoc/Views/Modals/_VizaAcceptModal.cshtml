<div class="mModal">
    <div class="modal fade modalBtn" id="vizaAcceptModal" tabindex="-1" role="dialog" aria-labelledby="prAddModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header"></div>
                <div class="modal-header2">
                    <span>Vizanı təsdiq etməyə əminsinizmi ?</span>
                </div>

                <div class="modal-body" style="max-height: 70vh;overflow-y: auto">
                    <div class="row">
                        <div class="col-12">
                            <textarea class="form-control" id="acceptNote"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <div class="col-3">
                        <button type="button" id="vizaAcceptButton" class="mBtn mBtn-pr defaultBtn" style="width: 100%">Təsdiqlə</button>
                    </div>
                    <div class="col-3">
                        <button type="button" class="mBtn mBtn-sec mr-5 defaultBtn closeBtn" style="width: 100%">Bağla</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("#vizaAcceptButton").click(function () {
        var token = $('input[name="__RequestVerificationToken"]').val();
        var requestToken = $("#spanToken").html();

        var acceptUrl = `/az/DocOperation/AcceptViza?token=${requestToken}`;

        $.ajax({
            type: 'POST',
            url: acceptUrl,
            dataType: 'json',
            beforeSend: function () {
                window.ShowLoading();
            },
            data: { __RequestVerificationToken: token, note: $('#acceptNote').val() },
            success: function () {
                var pageIndex = $('.jqx-grid').CachedGrid().config.params.pageIndex;
                $('.jqx-grid').bindgrid(pageIndex, undefined);
                $('#vizaAcceptModal').modal('hide');
                $('#docConfirmationDialogModal').modal('hide');
                $('#doubleClickModal').modal('hide');
            },
            complete: function () {
                window.CloseLoading();
            }
        });
    });

    $("#vizaConfirmButton").click(function () {
        var isConfirm = $("#signStatus").attr('data-isdocconfirm');

        if (isConfirm == "true") {
            $("#docConfirmationDialogModal").modal("show");
            $("#docConfirmation").click();
        } else {
            $("#vizaAcceptModal").modal("show");
        }
    });
</script>