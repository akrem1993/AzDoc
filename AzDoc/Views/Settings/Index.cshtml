<style>
    a:hover, a:focus {
        text-decoration: none;
        outline: none;
    }

    .vertical-tab {
        display: table;
    }

        .vertical-tab .nav-tabs {
            display: table-cell;
            width: 250px !important;
            min-width: 28%;
            border: none;
            position: relative;
        }

            .vertical-tab .nav-tabs li {
                float: none;
                vertical-align: top;
                margin-right: 0;
            }

                .vertical-tab .nav-tabs li a {
                    display: block;
                    padding: 10px 20px;
                    margin: 10px 10px 20px 0;
                    background: #0f4c5c;
                    font-size: 17px;
                    font-weight: 600;
                    color: #fff;
                    text-transform: none;
                    text-align: center;
                    border: none;
                    border-radius: 0;
                    position: relative;
                    transition: all 0.3s ease 0s;
                }

                .vertical-tab .nav-tabs li:last-child a {
                    margin-bottom: 10px;
                }

                .vertical-tab .nav-tabs li a:hover,
                .vertical-tab .nav-tabs li.active a {
                    background: #ff6a00;
                    border: none;
                    color: #fff;
                }

                .vertical-tab .nav-tabs li a:before,
                .vertical-tab .nav-tabs li a:after {
                    content: "";
                    width: 20%;
                    height: 3px;
                    background: #0f4c5c;
                    position: absolute;
                    top: -5px;
                    left: 0;
                    transition: all 0.3s ease 0s;
                }

                .vertical-tab .nav-tabs li a:after {
                    top: auto;
                    left: auto;
                    bottom: -5px;
                    right: 0;
                }

                .vertical-tab .nav-tabs li a:hover:before,
                .vertical-tab .nav-tabs li.active a:before,
                .vertical-tab .nav-tabs li a:hover:after,
                .vertical-tab .nav-tabs li.active a:after {
                    width: 100%;
                    background: #f1611f;
                }

        .vertical-tab .tab-content {
            display: table-cell;
            padding: 20px 25px;
            background: #0f4c5c;
            font-size: 15px;
            color: #fff;
            line-height: 27px;
            letter-spacing: 1px;
            outline: 6px dotted #fff;
            outline-offset: -1px;
            vertical-align: top;
        }

            .vertical-tab .tab-content h3 {
                font-size: 24px;
                color: #fff;
                margin: 0 0 5px 0;
            }

    @@media only screen and (max-width: 479px) {
        .vertical-tab .nav-tabs {
            display: block;
            width: 100%;
            border-right: none;
        }

            .vertical-tab .nav-tabs li {
                margin: 0 0 10px 0;
            }

                .vertical-tab .nav-tabs li:last-child {
                    margin-bottom: 0;
                }

                .vertical-tab .nav-tabs li a,
                .vertical-tab .nav-tabs li.active a {
                    padding: 10px;
                    margin-right: 0;
                }

        .vertical-tab .tab-content {
            display: block;
        }

            .vertical-tab .tab-content h3 {
                font-size: 18px;
            }
    }
</style>
